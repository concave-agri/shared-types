{
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "declaration": true,
    "allowJs": true,
    "noImplicitAny": false /*never ever do this in porject config*/,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "lib": ["ES2018"],
    "types": []
  },
  "include": ["src"],
  "exclude": ["**/node_modules/**"]
}
